<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:njuptjsy = "http://schemas.android.com/apk/res/com.njuptjsy.imclient"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.njuptjsy.imclient.view.SlidingMenu
        android:id="@+id/id_sliding_menu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
		njuptjsy:rightPadding = "100dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <include layout="@layout/left_menu" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <com.njuptjsy.imclient.view.RefreshListView
                    android:id="@+id/id_session_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="horizontal" >
                </com.njuptjsy.imclient.view.RefreshListView>
            </LinearLayout>
        </LinearLayout>
    </com.njuptjsy.imclient.view.SlidingMenu>

</RelativeLayout>