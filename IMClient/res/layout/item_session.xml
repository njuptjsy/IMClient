<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp" >

    <FrameLayout
        android:id="@+id/session_frame"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
         >

        <ImageView
            android:id="@+id/session_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:src="@drawable/listview_icon1" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/session_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/session_frame"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/session_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="@string/session_name_test"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/session_lastmsg"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight="2"
            android:text="@string/session_msg_test"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>